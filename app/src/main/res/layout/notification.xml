<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:padding="10dp"
            app:srcCompat="@drawable/music"
            android:id="@+id/no_iv_album"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/no_tv_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_album"
            android:text="歌名"
            android:textColor="@color/colorPrimary"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/no_play"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/start_black"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/no_next"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next_black"
            android:layout_width="40dp"
            android:layout_height="40dp" />
</LinearLayout>